<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="225dp"
    android:layout_height="320dp"
    android:background="@color/blue_700"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemViewUye"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/movieNameNow"
        app:layout_constraintTop_toBottomOf="@+id/movieNameNow">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgNow"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_weight="1.5"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:shapeAppearanceOverlay="@style/radius_image_view"/>


        <TextView
            android:id="@+id/movieNameNow"

            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="5"
            android:fontFamily="@font/sfpregular"
            android:text="user name"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="@+id/imgNow"
            app:layout_constraintStart_toStartOf="@+id/imgNow"
            app:layout_constraintTop_toBottomOf="@+id/imgNow" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>